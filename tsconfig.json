{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"jsx": "react",
		"lib": [
			"dom",
			"es2015",
			"es2017"
		],
		"strict": true,
		"noImplicitAny": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"preserveConstEnums": true
	},
	"include": [
		"./src/**/*",
		"./__tests__/**/*"
	],
	"exclude": [
		"webpack.config.js"
	]
}